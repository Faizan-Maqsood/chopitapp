<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".ui.fragment.ChatViewFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:paddingTop="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.2"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="@color/color_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image_profilechat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:roundPercent="10"
            android:background="@drawable/background_filter"
            android:src="@drawable/image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_headername"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanistmedium"
            android:text="@string/fullstack_designer"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/color_bg"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_more_vert_24"/>

        <TextView
            android:id="@+id/istyping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/_7_online_from_12_people"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_line_1"
            android:scaleType="fitXY"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_coversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_background_dark"
        android:text="@string/that_s_very_nice_place_you_guys_made_a_very_good_decision_can_t_wait_to_go_on_vacation"
        android:textColor="@color/white"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_coversation"
        android:layout_marginTop="30dp">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:roundPercent="1"
        android:layout_marginStart="20dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_receiver"
        android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/tv_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_receiver"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_receiver"
            android:text="@string/hello_guys_we_have_discussed_about_post_corona_vacation_plan_and_our_decision_is_to_go_to_bali_we_will_have_a_very_big_party_after_this_corona_ends_these_are_some_images_about_our_destination"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/corner_background_dark"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_receiver"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/tv_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/hello_guys_we_have_discussed_about_post_corona_vacation_plan_and_our_decision_is_to_go_to_bali_we_will_have_a_very_big_party_after_this_corona_ends_these_are_some_images_about_our_destination"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/corner_background_dark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:roundPercent="1"
            android:layout_marginEnd="20dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_sender" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_receiverlower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_sender"
        android:layout_marginTop="30dp">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_receiverlower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:roundPercent="1"
            android:layout_marginStart="20dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_receiverlower"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/tv_receiverlower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_receiverlower"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_receiverlower"
            android:text="@string/hello_guys_we_will_have_a_very_big_party_after_this_corona_ends_these_are_some_images_about_our_destination"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@drawable/corner_background_dark"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>