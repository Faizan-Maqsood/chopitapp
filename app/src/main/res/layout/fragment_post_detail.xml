<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".ui.fragment.PostDetailFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
   >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_back"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/backbutton_design"
        android:paddingStart="13dp"
        android:paddingEnd="0dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingTop="4dp"
        android:paddingStart="2dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_back"
        app:layout_constraintBottom_toBottomOf="@id/button_back"
        android:layout_marginEnd="30dp"
        android:src="@drawable/messagenew"
        android:tint="@color/white"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        android:layout_marginTop="13dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewpager">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_dot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="160dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_fdots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:src="@drawable/ic_unselecteddot"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_sdots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_unselecteddot" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_tdots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:src="@drawable/ic_unselecteddot"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/text_tshirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/urbanistbold"
                android:text="@string/t_shirt_2"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_tshirt"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanistbold"
                android:text="@string/_50"
                android:textColor="#26B4E3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/urbanistbold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_price"
                android:text="@string/_5_0"
                android:textColor="#21C39D"
                android:textSize="16sp"
                tools:ignore="DuplicateIds" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/text_price"
                app:layout_constraintStart_toEndOf="@id/text_rating"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/text_rating"
                app:layout_constraintBottom_toBottomOf="@id/text_rating"
                android:src="@drawable/ic_imagestar" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/text_rating"
                app:layout_constraintBottom_toBottomOf="@id/text_rating"
                app:layout_constraintStart_toEndOf="@id/star1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/star2"
                app:layout_constraintTop_toTopOf="@id/text_rating"
                app:layout_constraintBottom_toBottomOf="@id/text_rating"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/star3"
                app:layout_constraintTop_toTopOf="@id/text_rating"
                app:layout_constraintBottom_toBottomOf="@id/text_rating"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/star4"
                app:layout_constraintTop_toTopOf="@id/text_rating"
                app:layout_constraintBottom_toBottomOf="@id/text_rating"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar" />

            <TextView
                android:id="@+id/tv_showreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_rating"
                android:fontFamily="@font/urbanistmedium"
                android:gravity="center_vertical"
                android:text="@string/show_review"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableRightCompat="@drawable/ic_baseline_keyboard_arrow_up_24" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/just_cornerbutton"
                android:fontFamily="@font/urbanistbold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview"
        android:layout_marginTop="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/image_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circular_image"
                android:src="@drawable/ic_baseline_person_24"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/image_profile"
                app:layout_constraintTop_toTopOf="@id/image_profile"
                app:layout_constraintBottom_toBottomOf="@id/image_profile"
                android:layout_marginStart="10dp"
                android:text="@string/tyler_the_creator"
                android:textColor="@color/white"
                android:fontFamily="@font/urbanistbold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text_rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanistbold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_profile"
                android:text="@string/_5_0"
                android:textColor="#21C39D"
                android:textSize="16sp"
                tools:ignore="DuplicateIds" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/starf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/text_rating2"
                app:layout_constraintTop_toTopOf="@id/text_rating2"
                app:layout_constraintBottom_toBottomOf="@id/text_rating2"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/starf"
                app:layout_constraintTop_toTopOf="@id/text_rating2"
                app:layout_constraintBottom_toBottomOf="@id/text_rating2"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/stars"
                app:layout_constraintTop_toTopOf="@id/text_rating2"
                app:layout_constraintBottom_toBottomOf="@id/text_rating2"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/starff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/start"
                app:layout_constraintTop_toTopOf="@id/text_rating2"
                app:layout_constraintBottom_toBottomOf="@id/text_rating2"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/starfif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/starff"
                app:layout_constraintTop_toTopOf="@id/text_rating2"
                app:layout_constraintBottom_toBottomOf="@id/text_rating2"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_imagestar" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_rating2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/urbanistlight"
                android:textSize="14sp"
                android:text="Lörem ipsum sysoliga ladick geod mir. Ekököns särade, utom varade religa. Parasport olig knäprotest lavyde. Häde krogt och tånäras. Gigar. Du kan vara drabbad."/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>