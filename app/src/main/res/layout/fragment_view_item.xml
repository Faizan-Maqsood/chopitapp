<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".ui.fragment.ViewItemFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#191A1D"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_profilebackground"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cartoonmain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_back"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/backbutton_design"
                android:paddingStart="13dp"
                android:paddingEnd="0dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image_prpfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="95dp"
                android:src="@drawable/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:roundPercent="1" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/urbanistbold"
                android:text="@string/tyler_the_creator"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_prpfile" />

            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/urbanistlight"
                android:text="@string/_12m_followers"
                android:textColor="@color/whiteopacity"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_buttons"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_followers">

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/just_cornerbutton"
                    android:fontFamily="@font/urbanistbold"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/follow"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/textmessage_background"
                    android:src="@drawable/messagenew"
                    android:tint="@color/white"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintStart_toEndOf="@id/tv_follow"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/urbanistlight"
                android:text="Lörem ipsum sysoliga ladick geod mir. Ekököns särade, utom varade religa. Parasport olig knäprotest lavyde. Häde krogt och tånäras. Gigar. Du kan vara drabbad."
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_buttons" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview">
        <TextView
            android:id="@+id/tv_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/items"
            android:textColor="#5446FF"
            android:textSize="16sp"
            android:fontFamily="@font/urbanistmedium"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/inventory"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/urbanistmedium"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/iv_design"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_dot"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="5dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv_dot"
            app:layout_constraintBottom_toBottomOf="@id/iv_dot"
            android:layout_width="0dp"
            android:layout_height="0.3dp"/>
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_items"
            app:layout_constraintStart_toStartOf="@id/tv_items"
            app:layout_constraintEnd_toEndOf="@id/tv_items"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_more_horiz_24"/>
        <TextView
            android:id="@+id/iv_designr"
            app:layout_constraintStart_toEndOf="@id/iv_dot"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="13dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv_dot"
            app:layout_constraintBottom_toBottomOf="@id/iv_dot"
            android:layout_width="0dp"
            android:layout_height="0.3dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/iv_design_inventory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_dot_inventory"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="5dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv_dot_inventory"
            app:layout_constraintBottom_toBottomOf="@id/iv_dot_inventory"
            android:layout_width="0dp"
            android:layout_height="0.3dp"/>
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:visibility="gone"
            android:id="@+id/iv_dot_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_inventory"
            app:layout_constraintStart_toStartOf="@id/tv_inventory"
            app:layout_constraintEnd_toEndOf="@id/tv_inventory"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_more_horiz_24"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/iv_designr_inventory"
            app:layout_constraintStart_toEndOf="@id/iv_dot_inventory"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="13dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv_dot_inventory"
            app:layout_constraintBottom_toBottomOf="@id/iv_dot_inventory"
            android:layout_width="0dp"
            android:layout_height="0.3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewitem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_change"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="1:1"
        tools:listitem="@layout/recycler_viewitems"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>